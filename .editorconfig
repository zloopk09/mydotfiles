# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# all files
[*]
max_line_length = 80
indent_size = 2
indent_style = space
# it's recommend to keep these unchanged
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{xml,py,java,go,sh}]
indent_style = tab
indent_size = 4

# Shell configuration
[{.bashrc,.zshrc}]
indent_style = space
indent_size = 2

# YAML files
[{*.yml,*yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
